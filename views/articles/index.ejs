<!-- index page for the blog site -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" 
  integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <title>Blog</title>
</head>
<body>
  <div class="container">
    <h1 class="mb-4">Blog Articles</h1>
    <a href="/articles/new" class="btn btn-success">New Article </a>
    <form action="/logout?_method=DELETE" method="POST" class="d-inline">
      <button type="submit" class="btn btn-dark">Log Out</button>
    </form>

    <!-- generates each article -->
    <% articles.forEach(article => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= article.title %></h4>
          <div class="card-subtitle text-muted">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2"><%= article.teaser %></div>
          
          <!-- buttons that allows the user to either read more of the article, -->
          <!-- edit the article, or delete the article -->
          <a href="/articles/<%= article.slug %>" 
            class="btn btn-primary">Read More</a> 
            <a href="/articles/edit/<%= article.id %>" 
              class="btn btn-info">Edit</a>
            <form action="/articles/<%= article.id %>?_method=DELETE"
               method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
      </div>
    <% })%>
  </div>
</body>
</html>